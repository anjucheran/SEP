<% include partials/header %>

<link rel="stylesheet" href="/stylesheets/newCentre.css">

<div class="formdiv border border-primary rounded">
  <div class="heading"><h2>Register Channelling Centre</h2></div>
  <form method="POST" action="/centre">
    <div class="form-group">
      <label for="name">Channelling Centre Name</label>
      <input type="text" class="form-control" id="name" name="name" placeholder="Channelling Centre">
    </div>
    <div class="form-group">
      <label for="SLMAnum">SLMA Registration Number</label>
      <input type="text" class="form-control" id="SLMAnum" name="SLMAnum" placeholder="Registration Number">
    </div>
    <div class="form-group">
      <label for="address">Address</label>
      <input type="text" class="form-control" id="address" name="address" placeholder="Address">
    </div>
    <div class="form-group">
      <label for="contact">Contact Number</label>
      <input type="text" class="form-control" id="contact" name="contact" placeholder="Contact Number">
    </div>
    <div class="login-btn">
      <button type="submit" class="btn btn-primary">Register</button>
    </div>
  </form>
</div>

<% include partials/footer %>